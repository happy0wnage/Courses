    <rule>
        <role>common</role>
        <urls>
            <url>/index.html</url>
            <url>/register</url>
            <url>/login</url>
            <url>/imageGeneratorServlet</url>
            <url>/changeLang</url>
        </urls>
    </rule>

</security>