        <urls>
            <url>/logout</url>
            <url>/register</url>
            <url>/index.html</url>
            <url>/addCourse</url>
            <url>/addNews</url>
            <url>/addTheme</url>
            <url>/profile</url>
            <url>/profilePage</url>
            <url>/writeMessage</url>
            <url>/messagesPage</url>
            <url>/conversationServlet</url>
            <url>/coursesPage</url>
            <url>/journalPage</url>
            <url>/newsPage</url>
            <url>/deleteCourse</url>
            <url>/imageGeneratorServlet</url>
            <url>/deleteNews</url>
            <url>/changeImage</url>
            <url>/changeRole</url>
            <url>/changeUserStatus</url>
            <url>/changeLang</url>
            <url>/deleteTheme</url>
            <url>/changeCourse</url>
            <url>/changeNews</url>
            <url>/changeProfile</url>
