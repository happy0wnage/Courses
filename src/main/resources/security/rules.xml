    <rule>
        <role>lecturer</role>
        <urls>
            <url>/logout</url>
            <url>/index.html</url>
            <url>/addMark</url>
            <url>/addNews</url>
            <url>/profile</url>
            <url>/profilePage</url>
            <url>/writeMessage</url>
            <url>/messagesPage</url>
            <url>/conversationServlet</url>
            <url>/coursesPage</url>
            <url>/journalPage</url>
            <url>/newsPage</url>
            <url>/imageGeneratorServlet</url>
            <url>/deleteNews</url>
            <url>/changeImage</url>
            <url>/changeRole</url>
            <url>/changeMark</url>
            <url>/deleteMark</url>
            <url>/changeLang</url>
            <url>/changeNews</url>
            <url>/changeProfile</url>
            <url>/changePassword</url>
        </urls>
    </rule>

    <rule>
        <role>student</role>
        <urls>
            <url>/logout</url>
            <url>/index.html</url>
            <url>/subscribeCourse</url>
            <url>/profile</url>
            <url>/profilePage</url>
            <url>/writeMessage</url>
            <url>/messagesPage</url>
            <url>/conversationServlet</url>
            <url>/coursesPage</url>
            <url>/journalPage</url>
            <url>/newsPage</url>
            <url>/unsubscribeCourse</url>
            <url>/imageGeneratorServlet</url>
            <url>/changeImage</url>
            <url>/changeLang</url>
            <url>/changeProfile</url>
            <url>/changePassword</url>
        </urls>
